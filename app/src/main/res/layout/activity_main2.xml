<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#f2f2f2"
        app:cardCornerRadius="35dp"
        app:cardElevation="40sp"
        app:contentPadding="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"

       >
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="NOM :"
                android:textSize="20sp"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/getnom"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:clickable="false"
                android:hint="entrez votre nom"
                android:padding="15dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp">
            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="PRENOM:"
                android:textSize="20sp"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/getprenom"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="entrez votre prenom"
                android:background="@color/white"
                android:clickable="false"
                android:padding="15dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="175dp">
            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Sexe:"
                android:textSize="20sp"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/getsexe"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="votre sexe"
                android:background="@color/white"
                android:clickable="false"
                android:padding="15dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="250dp">
            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Nationalite:"
                android:textSize="20sp"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/getnationalite"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="votre sexe"
                android:background="@color/white"
                android:clickable="false"
                android:padding="15dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="325dp">
            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Loisirs:"
                android:textSize="20sp"
                android:padding="10dp"/>
            <ListView
                android:id="@+id/getloisirs"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:clickable="false"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="400dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Commentaire:"
                android:textSize="20sp"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/editcom"
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:hint="commentaire"
                android:inputType="textMultiLine"
                android:lines="5"
                android:padding="10dp"
                android:background="@color/white"
                />

        </LinearLayout>

        <Button
            android:id="@+id/retour"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            android:text="Retour"
            android:textAlignment="center"
            android:layout_marginRight="75dp"
            android:layout_marginLeft="75dp"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>